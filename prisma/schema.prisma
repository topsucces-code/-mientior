generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model accounts {
  id                    String            @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime
  better_auth_users     better_auth_users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model admin_users {
  id                String             @id
  email             String             @unique
  auth_user_id      String?            @unique
  firstName         String
  lastName          String
  role              Role               @default(VIEWER)
  permissions       Json?
  isActive          Boolean            @default(true)
  lastLoginAt       DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime
  better_auth_users better_auth_users? @relation(fields: [auth_user_id], references: [id])
  audit_logs        audit_logs[]
  notifications     notifications[]
  saved_views       saved_views[]
  support_tickets   support_tickets[]

  @@index([auth_user_id])
  @@index([email])
  @@index([isActive])
  @@index([role])
}

model analytics {
  id        String   @id
  page      String
  views     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model audit_logs {
  id          String       @id
  action      String
  resource    String
  resourceId  String?
  userId      String?
  adminUserId String?
  ipAddress   String?
  userAgent   String?
  metadata    Json?
  changes     Json?
  createdAt   DateTime     @default(now())
  admin_users admin_users? @relation(fields: [adminUserId], references: [id])

  @@index([adminUserId])
  @@index([createdAt])
  @@index([resourceId])
  @@index([resource])
}

model banners {
  id               String         @id
  title            String
  message          String
  background_color String?
  text_color       String?
  background_image String?
  link             String?
  link_text        String?
  position         BannerPosition @default(TOP)
  priority         Int            @default(0)
  status           ContentStatus  @default(DRAFT)
  dismissible      Boolean        @default(true)
  show_countdown   Boolean        @default(false)
  start_date       DateTime?
  end_date         DateTime?
  targetAudience   Json?
  impressions      Int            @default(0)
  clicks           Int            @default(0)
  created_at       DateTime       @default(now())
  updated_at       DateTime

  @@index([end_date])
  @@index([position])
  @@index([priority])
  @@index([start_date])
  @@index([status])
}

model better_auth_users {
  id            String       @id
  name          String
  email         String       @unique
  emailVerified Boolean      @default(false)
  image         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime
  accounts      accounts[]
  admin_users   admin_users?
  sessions      sessions[]
}

model blog_categories {
  id          String       @id
  name        String
  slug        String       @unique
  description String?
  image       String?
  order       Int          @default(0)
  is_active   Boolean      @default(true)
  created_at  DateTime     @default(now())
  updated_at  DateTime
  blog_posts  blog_posts[]

  @@index([is_active])
  @@index([slug])
}

model blog_post_tags {
  post_id    String
  tag_id     String
  created_at DateTime   @default(now())
  blog_posts blog_posts @relation(fields: [post_id], references: [id], onDelete: Cascade)
  blog_tags  blog_tags  @relation(fields: [tag_id], references: [id], onDelete: Cascade)

  @@id([post_id, tag_id])
}

model blog_posts {
  id              String           @id
  title           String
  slug            String           @unique
  excerpt         String?
  content         Json
  featured_image  String?
  status          ContentStatus    @default(DRAFT)
  published_at    DateTime?
  scheduled_at    DateTime?
  author_id       String?
  author_name     String?
  author_avatar   String?
  category_id     String?
  seo             Json?
  readTime        Int?
  views           Int              @default(0)
  likes           Int              @default(0)
  created_at      DateTime         @default(now())
  updated_at      DateTime
  blog_post_tags  blog_post_tags[]
  blog_categories blog_categories? @relation(fields: [category_id], references: [id])

  @@index([category_id])
  @@index([published_at])
  @@index([slug])
  @@index([status])
}

model blog_tags {
  id             String           @id
  name           String
  slug           String           @unique
  created_at     DateTime         @default(now())
  blog_post_tags blog_post_tags[]

  @@index([slug])
}

model campaigns {
  id             String         @id
  name           String
  type           CampaignType
  status         CampaignStatus @default(DRAFT)
  subject        String?
  content        String
  segmentFilters Json?
  scheduledAt    DateTime?
  sentAt         DateTime?
  stats          Json?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime

  @@index([createdAt])
  @@index([scheduledAt])
  @@index([status])
  @@index([type])
}

model Category {
  id          String       @id
  name        String
  nameEn      String?
  slug        String       @unique
  description String?
  image       String?
  parentId    String?
  order       Int          @default(0)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  parent      Category?    @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: Restrict)
  children    Category[]   @relation("CategoryToCategory")
  products    Product[]
  size_guides size_guides?

  @@index([isActive])
  @@index([parentId])
  @@index([slug])
  @@map("categories")
}

model cms_media {
  id            String   @id
  filename      String
  url           String
  thumbnail_url String?
  alt           String?
  caption       String?
  mime_type     String
  size          Int
  width         Int?
  height        Int?
  folder        String?  @default("uploads")
  tags          Json?
  uploaded_by   String?
  created_at    DateTime @default(now())
  updated_at    DateTime

  @@index([created_at])
  @@index([folder])
  @@index([mime_type])
}

model cms_pages {
  id             String           @id
  title          String
  slug           String           @unique
  description    String?
  content        Json?
  template       String           @default("default")
  status         ContentStatus    @default(DRAFT)
  published_at   DateTime?
  scheduled_at   DateTime?
  seo            Json?
  created_by     String?
  updated_by     String?
  created_at     DateTime         @default(now())
  updated_at     DateTime
  content_blocks content_blocks[]

  @@index([published_at])
  @@index([slug])
  @@index([status])
}

model content_blocks {
  id         String           @id
  name       String
  type       ContentBlockType
  content    Json
  settings   Json?
  order      Int              @default(0)
  is_active  Boolean          @default(true)
  page_id    String?
  created_at DateTime         @default(now())
  updated_at DateTime
  cms_pages  cms_pages?       @relation(fields: [page_id], references: [id], onDelete: Cascade)

  @@index([is_active])
  @@index([page_id])
  @@index([type])
}

model customer_segments {
  id            String   @id
  name          String
  description   String?
  filters       Json
  customerCount Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  @@index([createdAt])
  @@index([isActive])
}

model faqs {
  id        String   @id
  question  String
  answer    String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime
}

model feature_flags {
  id          String   @id
  key         String   @unique
  name        String
  description String?
  enabled     Boolean  @default(false)
  roles       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime

  @@index([enabled])
  @@index([key])
}

model media {
  id        String   @id
  url       String
  alt       String?
  type      String
  createdAt DateTime @default(now())
}

model menu_items {
  id               String       @id
  label            String
  url              String?
  icon             String?
  target           String?      @default("_self")
  order            Int          @default(0)
  menu_id          String
  parent_id        String?
  is_active        Boolean      @default(true)
  created_at       DateTime     @default(now())
  updated_at       DateTime
  menus            menus        @relation(fields: [menu_id], references: [id], onDelete: Cascade)
  menu_items       menu_items?  @relation("menu_itemsTomenu_items", fields: [parent_id], references: [id], onDelete: Cascade)
  other_menu_items menu_items[] @relation("menu_itemsTomenu_items")

  @@index([menu_id])
  @@index([order])
  @@index([parent_id])
}

model menus {
  id         String       @id
  name       String
  location   String       @unique
  is_active  Boolean      @default(true)
  created_at DateTime     @default(now())
  updated_at DateTime
  menu_items menu_items[]

  @@index([is_active])
  @@index([location])
}

model newsletter_subscriptions {
  id              String    @id
  email           String    @unique
  acceptMarketing Boolean   @default(true)
  ipAddress       String?
  subscribedAt    DateTime  @default(now())
  unsubscribedAt  DateTime?
  isActive        Boolean   @default(true)

  @@index([email])
  @@index([isActive])
  @@index([subscribedAt])
}

model notifications {
  id          String      @id
  type        String
  title       String
  message     String
  data        Json?
  read        Boolean     @default(false)
  adminUserId String
  createdAt   DateTime    @default(now())
  admin_users admin_users @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@index([adminUserId])
  @@index([createdAt])
  @@index([read])
}

model order_items {
  id           String   @id
  quantity     Int
  price        Float
  productName  String?
  productImage String?
  variantId    String?
  subtotal     Float?
  productId    String
  orderId      String
  createdAt    DateTime @default(now())
  orders       orders   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  products     Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model order_tracking {
  id              String            @id
  order_id        String
  event_type      TrackingEventType
  title           String
  description     String?
  location        String?
  carrier         String?
  tracking_number String?
  metadata        Json?
  created_at      DateTime          @default(now())

  @@index([created_at])
  @@index([event_type])
  @@index([order_id])
}

model orders {
  id                   String              @id
  orderNumber          String              @unique
  status               OrderStatus         @default(PENDING)
  paymentStatus        PaymentStatus       @default(PENDING)
  subtotal             Float
  tax                  Float               @default(0)
  shipping             Float               @default(0)
  shippingCost         Float               @default(0)
  discount             Float               @default(0)
  total                Float
  estimatedDeliveryMin DateTime?
  estimatedDeliveryMax DateTime?
  notes                String?
  userId               String
  vendorId             String?
  vendorCommission     Float?
  promoCodeId          String?
  shippingAddress      Json?
  billingAddress       Json?
  paymentReference     String?
  paymentGateway       PaymentGateway?
  paymentMetadata      Json?
  createdAt            DateTime            @default(now())
  updatedAt            DateTime
  country_code         String?
  currency             String              @default("XOF")
  currencyRate         Float               @default(1)
  locale               String              @default("fr")
  payment_method       String?
  total_in_eur         Float?
  order_items          order_items[]
  promo_codes          promo_codes?        @relation(fields: [promoCodeId], references: [id])
  users                users               @relation(fields: [userId], references: [id])
  vendors              vendors?            @relation(fields: [vendorId], references: [id])
  promo_code_usages    promo_code_usages[]
  return_requests      return_requests[]

  @@index([createdAt])
  @@index([orderNumber])
  @@index([promoCodeId])
  @@index([status])
  @@index([userId])
  @@index([vendorId])
}

model password_reset_tokens {
  id        String    @id
  email     String
  token     String    @unique
  expiresAt DateTime
  used      Boolean   @default(false)
  usedAt    DateTime?
  ipAddress String?
  userAgent String?
  createdAt DateTime  @default(now())

  @@index([email])
  @@index([expiresAt])
  @@index([token])
}

model pim_product_mappings {
  id                  String        @id
  akeneo_product_id   String        @unique
  mientior_product_id String        @unique
  akeneo_sku          String        @unique
  last_synced_at      DateTime?
  sync_status         PimSyncStatus
  created_at          DateTime      @default(now())
  updated_at          DateTime
  products            Product       @relation(fields: [mientior_product_id], references: [id], onDelete: Cascade)

  @@index([last_synced_at])
  @@index([sync_status])
}

model pim_sync_logs {
  id         String           @id
  source     String
  operation  PimSyncOperation
  productId  String?
  status     PimSyncStatus
  metadata   Json?
  error      String?
  duration   Int?
  created_at DateTime         @default(now())
  products   Product?         @relation(fields: [productId], references: [id])

  @@index([created_at])
  @@index([operation])
  @@index([productId])
  @@index([source])
  @@index([status])
}

model product_answers {
  id                String            @id
  questionId        String
  userId            String?
  vendorId          String?
  answer            String
  isOfficial        Boolean           @default(false)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime
  product_questions product_questions @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model product_images {
  id         String   @id
  url        String
  alt        String   @db.VarChar(500)
  type       String   @default("IMAGE")
  thumbnail  String?
  order      Int      @default(0)
  product_id String
  created_at DateTime @default(now())
  video_url  String?
  frames     Json?
  width      Int?
  height     Int?
  products   Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@index([product_id])
}

model product_questions {
  id              String            @id
  productId       String
  userId          String?
  question        String
  status          String            @default("PENDING")
  helpful         Int               @default(0)
  notHelpful      Int               @default(0)
  verified        Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  product_answers product_answers[]
  products        Product           @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
}

model product_tags {
  productId String
  tagId     String
  createdAt DateTime @default(now())
  products  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  tags      tags     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([productId, tagId])
}

model product_variants {
  id             String   @id
  sku            String   @unique
  size           String?
  color          String?
  stock          Int      @default(0)
  price_modifier Float    @default(0)
  product_id     String
  created_at     DateTime @default(now())
  updated_at     DateTime
  products       Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@index([product_id])
}

model Product {
  id                 String                   @id
  name               String
  slug               String                   @unique
  description        String?
  searchVector       Unsupported("tsvector")? @map("search_vector")
  searchVectorSimple Unsupported("tsvector")? @map("search_vector_simple")
  nameEn             String?                  @map("name_en")
  descriptionEn      String?                  @map("description_en")
  price              Float
  compareAtPrice     Float?                   @map("compare_at_price")
  stock              Int                      @default(0)
  rating             Float                    @default(0)
  reviewCount        Int                      @default(0) @map("review_count")
  badge              String?
  featured           Boolean                  @default(false)
  onSale             Boolean                  @default(false) @map("on_sale")
  status             ProductStatus            @default(ACTIVE)
  approvalStatus     ApprovalStatus           @default(APPROVED) @map("approval_status")
  rejectionReason    String?                  @map("rejection_reason")
  specifications     Json?
  seo                Json?
  categoryId         String                   @map("category_id")
  vendorId           String?                  @map("vendor_id")
  arModelUrl         String?                  @map("ar_model_url")
  processingDays     Int                      @default(2) @map("processing_days")
  popularity         Int                      @default(0)
  createdAt          DateTime                 @default(now()) @map("created_at")
  updatedAt          DateTime                 @map("updated_at")
  orderItems         order_items[]
  pimProductMappings pim_product_mappings?
  pimSyncLogs        pim_sync_logs[]
  images             product_images[]
  productQuestions   product_questions[]
  productTags        product_tags[]
  variants           product_variants[]
  category           Category                 @relation(fields: [categoryId], references: [id])
  vendor             vendors?                 @relation(fields: [vendorId], references: [id])
  returnRequestItems return_request_items[]
  reviews            reviews[]

  @@index([approvalStatus])
  @@index([categoryId])
  @@index([createdAt])
  @@index([featured])
  @@index([nameEn])
  @@index([onSale])
  @@index([popularity])
  @@index([searchVector], type: Gin)
  @@index([searchVectorSimple], type: Gin)
  @@index([slug])
  @@index([status])
  @@index([vendorId])
  @@map("products")
}

model promo_code_usages {
  id             String      @id
  promoCodeId    String
  userId         String
  orderId        String
  discountAmount Float
  usedAt         DateTime    @default(now())
  orders         orders      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  promo_codes    promo_codes @relation(fields: [promoCodeId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([promoCodeId])
  @@index([userId])
}

model promo_codes {
  id                String              @id
  code              String              @unique
  type              PromoCodeType
  value             Float
  minOrderAmount    Float?
  maxDiscount       Float?
  usageLimit        Int?
  usageCount        Int                 @default(0)
  validFrom         DateTime?
  validTo           DateTime?
  conditions        Json?
  isActive          Boolean             @default(true)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime
  orders            orders[]
  promo_code_usages promo_code_usages[]

  @@index([code])
  @@index([isActive])
  @@index([validFrom])
  @@index([validTo])
}

model return_request_items {
  id                String          @id
  return_request_id String
  product_id        String
  quantity          Int
  price             Float
  condition         String          @default("UNOPENED")
  created_at        DateTime        @default(now())
  products          Product         @relation(fields: [product_id], references: [id], onDelete: Cascade)
  return_requests   return_requests @relation(fields: [return_request_id], references: [id], onDelete: Cascade)

  @@index([product_id])
  @@index([return_request_id])
}

model return_requests {
  id                   String                 @id
  order_id             String
  user_id              String
  status               ReturnStatus           @default(PENDING)
  reason               String
  reason_details       String                 @default("")
  total_amount         Float
  refund_amount        Float                  @default(0)
  refund_method        RefundMethod           @default(ORIGINAL)
  timeline             Json                   @default("[]")
  created_at           DateTime               @default(now())
  updated_at           DateTime
  return_request_items return_request_items[]
  orders               orders                 @relation(fields: [order_id], references: [id], onDelete: Cascade)
  users                users                  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([order_id])
  @@index([status])
  @@index([user_id])
}

model reviews {
  id         String       @id
  rating     Int
  title      String?
  comment    String?
  status     ReviewStatus @default(PENDING)
  userName   String
  userAvatar String?
  images     Json?
  videos     Json?
  verified   Boolean      @default(false)
  helpful    Int          @default(0)
  notHelpful Int          @default(0)
  response   Json?
  productId  String
  userId     String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime
  products   Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  users      users        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
  @@index([userId])
}

model saved_addresses {
  id          String   @id
  user_id     String
  firstName   String
  lastName    String
  line1       String
  line2       String?
  city        String
  postal_code String
  country     String   @default("FR")
  phone       String
  isDefault   Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime
  users       users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([user_id, isDefault])
}

model saved_views {
  id          String      @id
  name        String
  resource    String
  filters     Json?
  sorting     Json?
  columns     Json?
  isDefault   Boolean     @default(false)
  adminUserId String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime
  admin_users admin_users @relation(fields: [adminUserId], references: [id], onDelete: Cascade)

  @@unique([adminUserId, resource, name])
  @@index([adminUserId])
  @@index([resource])
}

model search_history {
  id               String   @id
  userId           String
  query            String
  normalized_query String
  timestamp        DateTime @default(now())
  users            users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, normalized_query])
  @@index([userId, timestamp])
}

model search_logs {
  id               String    @id
  query            String
  resultCount      Int
  userId           String?
  sessionId        String?
  filters          Json?
  sort             String?
  executionTime    Int?
  clickedProductId String?
  clickPosition    Int?
  clickedAt        DateTime?
  ipAddress        String?
  userAgent        String?
  correctedFrom    String?
  locale           String?   @default("fr")
  timestamp        DateTime  @default(now())
  users            users?    @relation(fields: [userId], references: [id])

  @@index([clickedProductId])
  @@index([locale])
  @@index([query])
  @@index([resultCount])
  @@index([timestamp])
  @@index([userId])
}

model sessions {
  id                String            @id
  userId            String
  expiresAt         DateTime
  token             String            @unique
  ipAddress         String?
  userAgent         String?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime
  better_auth_users better_auth_users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model settings {
  id         String   @id
  key        String   @unique
  value      String
  created_at DateTime @default(now())
  updated_at DateTime

  @@index([key])
}

model size_guides {
  id           String   @id
  categoryId   String   @unique
  measurements Json
  instructions String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model snippets {
  id         String   @id
  name       String   @unique
  key        String   @unique
  content    Json
  type       String   @default("html")
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime

  @@index([is_active])
  @@index([key])
}

model support_tickets {
  id                String            @id
  ticket_number     String            @unique
  subject           String
  description       String
  status            TicketStatus      @default(OPEN)
  priority          TicketPriority    @default(MEDIUM)
  category          TicketCategory
  user_id           String
  order_id          String?
  vendor_id         String?
  assigned_to_id    String?
  attachments       Json?
  tags              Json?
  metadata          Json?
  first_response_at DateTime?
  resolved_at       DateTime?
  closed_at         DateTime?
  created_at        DateTime          @default(now())
  updated_at        DateTime
  admin_users       admin_users?      @relation(fields: [assigned_to_id], references: [id])
  users             users             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  ticket_messages   ticket_messages[]

  @@index([assigned_to_id])
  @@index([category])
  @@index([created_at])
  @@index([priority])
  @@index([status])
  @@index([user_id])
}

model tags {
  id           String         @id
  name         String
  slug         String         @unique
  createdAt    DateTime       @default(now())
  product_tags product_tags[]
}

model ticket_messages {
  id              String          @id
  content         String
  is_staff        Boolean         @default(false)
  is_internal     Boolean         @default(false)
  ticket_id       String
  sender_id       String
  sender_name     String
  sender_avatar   String?
  attachments     Json?
  read_at         DateTime?
  created_at      DateTime        @default(now())
  support_tickets support_tickets @relation(fields: [ticket_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([ticket_id])
}

model user_notifications {
  id         String           @id
  user_id    String
  type       NotificationType
  title      String
  message    String
  link       String?
  data       Json?
  read       Boolean          @default(false)
  read_at    DateTime?
  created_at DateTime         @default(now())
  users      users            @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([read])
  @@index([type])
  @@index([user_id])
}

model users {
  id                      String               @id
  email                   String               @unique
  firstName               String?
  lastName                String?
  loyaltyLevel            LoyaltyLevel         @default(BRONZE)
  loyaltyPoints           Int                  @default(0)
  totalOrders             Int                  @default(0)
  totalSpent              Float                @default(0)
  addresses               Json?
  recentlyViewed          Json?
  wishlist                Json?
  cart                    Json?
  createdAt               DateTime             @default(now())
  updatedAt               DateTime
  preferences             Json?
  country_code            String               @default("SN")
  currency                String               @default("XOF")
  locale                  String               @default("fr")
  phone                   String?
  two_factor_backup_codes Json?
  two_factor_enabled      Boolean              @default(false)
  two_factor_secret       String?
  role                    UserRole             @default(CLIENT)
  email_verified          Boolean              @default(false)
  image                   String?
  name                    String?
  orders                  orders[]
  return_requests         return_requests[]
  reviews                 reviews[]
  saved_addresses         saved_addresses[]
  search_history          search_history[]
  search_logs             search_logs[]
  support_tickets         support_tickets[]
  user_notifications      user_notifications[]
  vendors                 vendors?

  @@index([email])
  @@index([loyaltyLevel])
}

model vendor_payouts {
  id        String       @id
  vendorId  String
  amount    Float
  period    String
  status    PayoutStatus @default(PENDING)
  paidAt    DateTime?
  metadata  Json?
  createdAt DateTime     @default(now())
  updatedAt DateTime
  vendors   vendors      @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([status])
  @@index([vendorId])
}

model vendors {
  id              String           @id
  slug            String           @unique
  email           String           @unique
  phone           String?
  logo            String?
  description     String?
  status          VendorStatus     @default(PENDING)
  documents       Json?
  rating          Float            @default(0)
  bank_details    Json?
  business_name   String
  business_type   String?
  city            String?
  commission_rate Float            @default(10.0)
  country         String           @default("SN")
  created_at      DateTime         @default(now())
  total_products  Int              @default(0)
  total_sales     Float            @default(0)
  updated_at      DateTime
  user_id         String           @unique
  orders          orders[]
  products        Product[]
  vendor_payouts  vendor_payouts[]
  users           users            @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([created_at])
  @@index([email])
  @@index([status])
  @@index([user_id])
}

model verifications {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime

  @@unique([identifier, value])
}

